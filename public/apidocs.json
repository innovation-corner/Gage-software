{
    "swagger": "2.0",
    "info": {
        "title": "Gage API",
        "description": "This is the API service for Gage app",
        "contact": {
            "url": "#"
        },
        "version": "1.0"
    },
    "schemes": [
        "http",
        "https"
    ],
    "consumes": [
        "application/x-www-form-urlencoded"
    ],
    "paths": {
        "/api/auth/refresh": {
            "patch": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Refresh user authorization token details using previous token",
                "parameters": [
                    {
                        "name": "token",
                        "in": "query",
                        "description": "authorization token",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "new authorization token"
                    }
                }
            }
        },
        "/api/auth/invalidate": {
            "delete": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Invalidate/Delete user authorization token using previous token",
                "parameters": [
                    {
                        "name": "token",
                        "in": "query",
                        "description": "authorization token",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "success message"
                    }
                }
            }
        }
    },
    "definitions": {},
    "externalDocs": {
        "description": "Find out more about Gage",
        "url": "#"
    }
}